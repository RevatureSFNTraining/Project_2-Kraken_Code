<aura:component controller="transactionsDataTable" implements="force:appHostable,flexipage:availableForAllPageTypes">
	<aura:attribute name="data" type="Object"/>
    <aura:attribute name="columns" type="List"/>
	<aura:attribute name="draftValues" type="Object" default="[]"/>
    <aura:handler name="init" value="{! this }" action="{! c.doInit }"/>
    <aura:handler event="c:newTransaction" action="{!c.handleNewTransaction}"/>
    


    <div class="slds-col slds-size_1-of-1 slds-large-size_1-of-2 slds-m-bottom_xx-large">
        <h1 class="slds-text-heading_large">Transactions (Recent 100)</h1>
        <lightning:datatable
                         columns="{! v.columns }"
                         data="{! v.data }"
                         keyField="id"
                         draftValues="{! v.draftValues }"
                         onsave=""
                         />
    </div>

    
    
   
</aura:component>